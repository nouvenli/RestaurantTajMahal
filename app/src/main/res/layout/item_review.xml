<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivReviewerAvatar"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvReviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/ivReviewerAvatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PrÃ©nom Nom" />

    <RatingBar
        android:id="@+id/rbReviewRating"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:progressTint="#FFB800"
        app:layout_constraintStart_toEndOf="@+id/ivReviewerAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewerName" />

    <TextView
        android:id="@+id/tvReviewerComment"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/ivReviewerAvatar"
        app:layout_constraintTop_toBottomOf="@+id/ivReviewerAvatar"
        tools:text="Portez ce vieux whisky au juge blond qui fume" />

    <View
        android:id="@+id/separatorReviewer"
        android:layout_width="0dp"
        android:layout_height="0.75dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="#DADADA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewerComment"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>